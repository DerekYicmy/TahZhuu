<h1> 新增課程 </h1>

<% if @course.errors.any? %>
  <ul>
  <% @course.errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
  <% end %>
  </ul>   
<% end %>

<%= form_with(model: @course) do |form| %>

  <div class="fields">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div

  <div class="fields">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="fields">
    <%= form.label :intro %>
    <%= form.text_area :intro %>
  </div>

  <div class="fields">
    <%= form.label :hour %>
    <%= form.number_field :hour %>
  </div>

  <div class="actions">
    <%= form.submit "新增" %>
  </div>


<% end %>
